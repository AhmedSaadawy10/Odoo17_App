<odoo>
 <!--Define The Tree View For "Patient Information" child menu item-->
        <record id="Patient_Tree_View" model="ir.ui.view">
            <field name="name">Patient Tree View</field>
            <field name="model">hms.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id" optional="1" />
                    <field name="f_name"/>
                    <field name="l_name"/>
                    <field name="birthdate"/>
                    <field name="age"/>
                </tree>
            </field>
        </record>

    <!--Define The Form View For "Patient Information" child menu item-->
        <record id="Patient_Form_View" model="ir.ui.view">
            <field name="name">Patient Form View</field>
            <field name="model">hms.patient</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>

                            <group string="Patient Info">
                                <field name="f_name" />
                                <field name="l_name" />
                                <field name="email" />
                                <field name="birthdate" />
                                <field name="age" />
                                <field name="department_id" />
                                <field name="department_capacity"/>
                                <field name="state"/>
                            </group>

                            <group string="Blood Info">
                                <field name="blood_type" />
                                <field name="pcr"/>
                            </group>

                            <notebook>
                                <!--Address page-->
                                <page string="ADDRESS">
                                    <group> <field name="address"/> </group>
                                </page>
                                <!--Image page-->
                                <page string="IMAGE">
                                    <group> <field name="image"/> </group>
                                </page>
                            </notebook>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    <record id="hms_patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_root_patient"
              name="Patients"
              parent="menu_hms"
              action="hms_patient_action"/>

</odoo>